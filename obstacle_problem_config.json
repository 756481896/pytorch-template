{
    "name": "OBSTACLE",
    "n_gpu": 1,

    "arch": {
        "type": "NormalResNetModel",
        "args": {
            "hidden_size": 30,
            "input_size": 2
        }
    },
    "data_loader": {
        "type": "ObstacleProblemDataLoader",
        "args":{
            "data_dir": "/home1/shenxing/ObstacleExperiments/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1,
            "num_internal_points": 1000,
            "num_boundary_points": 1000
        }
    },
    "valid_data_loader": {
        "type": "ObstacleProblemDataLoader",
        "args":{
            "data_dir": "/home1/shenxing/ObstacleExperiments/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1,
            "num_internal_points": 400,
            "num_boundary_points": 400
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": [
        "MSE_loss","L1_loss"
    ],
    "Lambda": [
        1,1,1
    ],
    "metrics": [
        "d_metric"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":1000,
            "gamma":0.5
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "/home1/shenxing/ObstacleExperiments/save_dir/",
        "save_freq": 1000,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "/home1/shenxing/ObstacleExperiments/runs/"
    }
}
